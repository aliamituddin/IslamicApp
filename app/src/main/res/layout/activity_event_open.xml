<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".EventOpen">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/edittext_round"
            android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal"
            android:hint="Title"
            android:paddingHorizontal="50dp"
            android:textSize="24sp" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="20dp"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:gravity="start|top"
                android:hint="Sect :"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/sect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:background="@drawable/edittext_round"
                android:textAlignment="center"
                android:hint="Shia"
                android:paddingHorizontal="20dp"
                android:textSize="20sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:gravity="start|top"
                android:hint="City :"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:background="@drawable/edittext_round"
                android:textAlignment="center"
                android:hint="Gujrat"
                android:paddingHorizontal="20dp"
                android:textSize="20sp" />



        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginHorizontal="10dp"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start|top"
                android:hint="Time :"
                android:layout_marginVertical="10dp"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:background="@drawable/edittext_round"
                android:textAlignment="center"
                android:hint="Time"
                android:paddingHorizontal="20dp"
                android:textSize="20sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:gravity="start|top"
                android:hint="Date :"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:background="@drawable/edittext_round"
                android:textAlignment="center"
                android:hint="Date"
                android:paddingHorizontal="20dp"
                android:textSize="20sp" />



        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
        android:layout_marginVertical="10dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:hint="Descrition:"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/desc"
                android:layout_width="202dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="10dp"
                android:background="@drawable/edittext_round"
                android:gravity="center"
                android:lines="4"
                android:hint="Description"
                android:paddingHorizontal="18sp"

                android:scrollbars="vertical"
                android:textSize="20sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_marginVertical="10dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:hint="Address:"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/address"
                android:layout_width="202dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:background="@drawable/edittext_round"
                android:gravity="center"
                android:hint="Address"
                android:paddingHorizontal="18sp"

                android:scrollbars="vertical"
                android:textSize="16sp" />
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_marginVertical="10dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:hint="Interested Peoples:"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tvInterested"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="10dp"
            android:background="@drawable/edittext_round"
            android:gravity="center"
            android:hint="0"
            android:paddingHorizontal="18sp"
            android:scrollbars="vertical"
            android:textSize="20sp" />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        >
        <Button
            android:id="@+id/btnInterested"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="@drawable/btn_round"
            android:onClick="btnInterested"
            android:paddingHorizontal="20dp"
            android:layout_gravity="center"
            android:text="Interested"

            android:textAlignment="center"
            android:textColor="@android:color/white" />
        <Button
            android:id="@+id/btnInvite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="@drawable/btn_round"
            android:onClick="btnInvite"
            android:paddingHorizontal="20dp"
            android:layout_gravity="center"
            android:text="Invite"

            android:textAlignment="center"
            android:textColor="@android:color/white" />
    </RelativeLayout>

</LinearLayout>